			</number_charinit>
			<label_fieldtop>
				<anchored to="initiative" />
				<static textres="init" />
			</label_fieldtop>

			<number_charsavefort name="fortitude" source="saves.fortitude.total">
				<anchored to="shortcutframe" position="insidetopleft" offset="75,25" width="30" height="28" />
			</number_charsavefort>
			<label_fieldtop>
				<anchored to="fortitude" />
